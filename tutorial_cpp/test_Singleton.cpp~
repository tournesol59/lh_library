#include <iostream>

class A {
    public:
	    A getInstance(void);
    private:
	    A a;
	    A(int i);
	    A(const &ac);
	    A &operator=(const & as);
};

A A::getInstance() {
    static bool active=0;
    int j=1;
    if (active==0) {
        a=A(j);
	active=1;
    }
    return a;
}

int main() {
   int j=1;
   A a=A(j);  // doit lever une erreur
   std::cout << "Objet A cree" << std::endl;
}
